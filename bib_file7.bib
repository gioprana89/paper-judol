title = {{THE RISE OF ONLINE GAMBLING AMONG TEENAGERS IN DERWATI VILLAGE, RANCASARI DISTRICT, BANDUNG CITY}},
url = {https://jurnalcerdik.ub.ac.id/index.php/jurnalcerdik/article/view/227},
volume = {3},
