doi = {https://dx.doi.org/10.51825/qanun.v2i1.24769},
journal = {QANUN: JURNAL HUKUM KELUARGA ISLAM},
keywords = {harmony,household,online gambling},
number = {1},
pages = {1--20},
title = {{Impact of Online Gambling Practices on Family Harmony: A Case Study in South Meruya, Kembangan Sub-District, West Jakarta}},
