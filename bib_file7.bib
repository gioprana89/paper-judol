year = {2025}
}
@article{Purwonugroho2025,
abstract = {The high divorce rate in Bogor Regency has not only occurred recently but the pattern has been seen since previous years, where divorce is caused by many factors. However, recently divorce has increased due to the addition of new factors that influence divorce, including the increasing phenomenon of online gambling, online loans, online game addiction, high levels of consumerism, not being ready to build a household, and coupled with the effects of the Covid 2019 pandemic which is still being felt today. So there needs to be seriousness from various parties to reduce the divorce rate in Bogor Regency, because if the divorce rate cannot be suppressed and overcome, in the future it will cause many social problems that affect the social order in society, especially in Bogor Regency.},
